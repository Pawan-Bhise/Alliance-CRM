@model  CallCenter.Models.KnowledgeCenterModel

@{
    ViewBag.Title = "KnowledgeList";
}

<h2>Knowledge Center</h2>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
@using (Html.BeginForm())
{

    <div class="row padingtop-bottom20px">
        <div class="col-md-2">
            @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.CategoryList, "CategoryId", "CategoryName"), new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.DropDownListFor(model => model.SubCategoryId, new SelectList(Model.SubCategoryList, "SubCategoryId", "SubCategoryName"), new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.DropDownListFor(model => model.SubSubCategoryId, new SelectList(Model.SubSubCategoryList, "SubSubCategoryId", "SubSubCategoryName"), new { @class = "form-control" })
        </div>
        <div class="col-md-2">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter search text in description" } })
        </div>
        <div class="col-md-4">
            <input type="submit" value="Apply" class="btn btn-primary" />
            <input type="button" id="btnDownladExcel" class="btn btn-primary" value="Download Excel" style="float:right" />
            <input type="button" name="btnCreateTicket" class="btn btn-primary" value="Create Knowledge" style="float:right" onclick="window.location= '@Url.Action("Index", "KnowledgeCenter")'" />
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th>
            @Html.DisplayName("Sub Category")
        </th>
        <th>
            @Html.DisplayName("Sub Sub Category")
        </th>
        <th>
            @Html.DisplayName("Description")
        </th>
        <th>
            @Html.DisplayName("Files")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.KnowledgeList)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubCategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubSubCategoryId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>

                @if (item.FileURL != null)
                {
                    <a href="~/Uploads/@item.FileURL.Split('\\')[item.FileURL.Split('\\').Length-1]" target="_blank"> @item.FileURL.Split('\\')[item.FileURL.Split('\\').Length - 1] </a>
                }
            </td>
            <td>
                @if (ViewBag.IsAccess == true)
                {
                    @Html.ActionLink("Edit", "KnowledgeEdit", new { id = item.KnowledgeId })
                }

            </td>
        </tr>
    }

</table>
<style>
    .btn {
        padding: 5px 6px;
    }
</style>
<script>
    $(document).ready(function () {
        $("#CategoryId").on("change", function () {
            fillSubCategoryDropdown();
        });
        $("#SubCategoryId").on("change", function () {
            fillSubSubCategoryDropdown();
        });
        function fillSubCategoryDropdown() {
            if ($("#CategoryId").val() != "0") {
                $.ajax(
                    {
                        url: '/Home/GetSubCategoryByCategory?CategoryId=' + $("#CategoryId").val(),
                        type: 'GET',
                        data: "",
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            var subcat = $.parseJSON(data);
                            $("#SubCategoryId").html("");
                            $("#SubCategoryId").append("<option value='0'>Select Sub Category</option>");
                            for (var i = 0; i < subcat.length; i++) {
                                $("#SubCategoryId").append("<option value='" + subcat[i].SubCategoryId + "'>" + subcat[i].SubCategoryName + "</option>");
                            }
                            fillSubSubCategoryDropdown();
                        },
                        error: function () {
                            alert("error");
                        }
                    })
            }
            else {
                $("#SubCategoryId").val("0");
                $("#SubSubCategoryId").val("0")
            }

        }

        function fillSubSubCategoryDropdown() {
            $.ajax(
                {
                    url: '/Home/GetSubSubCategoryBySubCategory?SubCategoryId=' + $("#SubCategoryId").val(),
                    type: 'GET',
                    data: "",
                    contentType: 'application/json; charset=utf-8',
                    success: function (data) {
                        var subcat = $.parseJSON(data);
                        $("#SubSubCategoryId").html("");
                        $("#SubSubCategoryId").append("<option value='0'>Select Sub Sub Category</option>");
                        for (var i = 0; i < subcat.length; i++) {
                            $("#SubSubCategoryId").append("<option value='" + subcat[i].SubSubCategoryId + "'>" + subcat[i].SubSubCategoryName + "</option>");
                        }
                    },
                    error: function () {
                        alert("error");
                    }
                });
        }

         $("#btnDownladExcel").click(function () {
                $.ajax(
                    {
                        url: '/KnowledgeCenter/KnowledgeDownloadExcel?categoryid=' + $("#CategoryId").val() + '&subcategoryid=' + $("#SubCategoryId").val() + '&subsubcategoryid=' + $("#SubSubCategoryId").val() + '&description=' + $("#Description").val(),
                        type: 'GET',
                        data: "",
                        contentType: 'application/json; charset=utf-8',
                        success: function (data) {
                            var blob = new Blob([data], { type: 'application/ms-excel' });
                            var downloadUrl = URL.createObjectURL(blob);
                            var a = document.createElement("a");
                            a.href = downloadUrl;
                            a.download = "KnowledgeListExcel.xls";
                            document.body.appendChild(a);
                            a.click();
                        },
                        error: function () {
                            alert("error");
                        }
                    });

            });

    });
</script>

 

