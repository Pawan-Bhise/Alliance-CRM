@model CallCenterSecure.Models.InboundCall

@{
    ViewBag.Title = "Create Inbound Call";
}

<h2>Create Inbound Call</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Inbound Call</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- First Column using Partial View -->
        <div class="col-md-6">
            @Html.Partial("_InboundFirstColumnPartial", Model)
        </div>

        <!-- Second Column using Partial View -->
        <div class="col-md-6">
            @Html.Partial("_InboundSecondColumnPartial", Model)
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
