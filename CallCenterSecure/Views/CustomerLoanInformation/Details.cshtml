        <h6 class="text-primary border-bottom pb-2 mt-4 mb-3">
            Financial Details
        </h6>

        <div class="row">
            @Html.Partial("_DisplayField", new Tuple<string, object>("Freeze Status", Model.FreezeStatus))
            @Html.Partial("_DisplayField", new Tuple<string, object>("Disbursed Amount", Model.DisbursedAmount))
            @Html.Partial("_DisplayField", new Tuple<string, object>("Installments", Model.Installments))
            @Html.Partial("_DisplayField", new Tuple<string, object>("Installment Amount", Model.InstallmentAmount))
            @Html.Partial("_DisplayField", new Tuple<string, object>("Installment Amount", Model.Purpose))
            @Html.Partial("_DisplayField", new Tuple<string, object>("Business Category", Model.BusinessCategory))
            @Html.Partial("_DisplayField", new Tuple<string, object>("Business Activity", Model.BusinessActivity))
