            <!-- OTHER DETAILS -->
            @*<h6 class="text-primary border-bottom pb-2 mt-4 mb-3">
                Other Details
            </h6>*@

            @*<div class="row">
                
                
                @Html.Partial("_DisplayField", new Tuple<string, object>("Account Status", Model.AccountStatus))
                
