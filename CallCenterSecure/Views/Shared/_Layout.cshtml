                                <ul class="dropdown-menu" aria-labelledby="srDropdown">
                                    <li>@Html.ActionLink("SR Management", "SRList", "Home", null, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>*@

                        @*<li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="knowledgeDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Knowledge Center
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="knowledgeDropdown">
                                    <li>@Html.ActionLink("Knowledge Center", "KnowledgeList", "KnowledgeCenter", null, new { @class = "dropdown-item" })</li>
                                </ul>
                            </li>*@

                        <li class="nav-item dropdown">
