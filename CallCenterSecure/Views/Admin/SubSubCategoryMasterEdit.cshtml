@model CallCenter.Models.SubSubCategoryMasterModel

@{
    ViewBag.Title = "SubSubCategoryMasterEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h2>Update Sub Sub Category </h2>

@using (Html.BeginForm())
{
     
    
    <div class="form-horizontal paddingtop30px">
         
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.SubSubCategoryId)

        <div class="form-group">
            @Html.Label("Sub Sub CategoryName", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.SubSubCategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SubSubCategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Sub Category", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.SubCategoryId, new SelectList(Model.SubCategoryList, "SubCategoryId", "SubCategoryName"), new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.SubCategoryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <div class="col-md-offset-2 col-md-2">
                <input type="button" value="Back" class="btn btn-primary" onclick="window.location= '@Url.Action( "SubSubCategoryMaster", "Admin")'" />
            </div>
        </div>
    </div>
}

