@model CallCenter.Models.SubCategoryMasterModel

@{
    ViewBag.Title = "SubCategoryMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sub Category</h2>

<p class="addbutton">
    @Html.ActionLink("Add New Subcategory", "SubCategoryMasterAdd")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Sub Category")
        </th>
        <th>
            @Html.DisplayName("Category")
        </th>
        <th></th>
    </tr>

@foreach (var item in  Model.SubCategoryList) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SubCategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "SubCategoryMasterEdit", new { id=item.SubCategoryId }) |
            @Html.ActionLink("Delete", "SubCategoryMasterDelete", new { id=item.SubCategoryId })
        </td>
    </tr>
}

</table>
